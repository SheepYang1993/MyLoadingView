<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="LoadingView">
        <attr name="bg_color" format="color" />
        <attr name="fans_color" format="color" />
        <attr name="wave_color" format="color" />
        <attr name="wave_size" format="dimension" />
        <attr name="fans_speed" format="integer" />
        <attr name="min_fans_speed" format="integer" />
        <attr name="max_fans_speed" format="integer" />
        <attr name="min_wave_size" format="dimension" />
        <attr name="max_wave_size" format="dimension" />
        <attr name="max" format="integer" />
        <attr name="progress" format="integer" />
        <attr name="is_fans_move" format="boolean" />
        <attr name="wave_mode" format="enum">
            <enum name="default_floating" value="0" />
            <enum name="floating_around" value="1" />
        </attr>
        <attr name="fans_mode" format="enum">
            <enum name="auto_move" value="0" />
            <enum name="progress_move" value="1" />
        </attr>
    </declare-styleable>
</resources>
